@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Basket";
    ViewData["IsBasket"] = true;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Price</td>
            <td>Count</td>
            <td>Option</td>
        </tr>
    </thead>
    <tbody>
        <partial name="_BasketPartialView" />
    </tbody>
</table>
@if (Model.Count() != 0)
{
    <a asp-controller="Basket"
       asp-action="ClearAll"
       class="button">
        Clear
    </a>
}



